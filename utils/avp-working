#   --twisted-nc=$Nc                                        \
#   --with-mdwf=$PACKTOP/mdwf                               \
#   --without-nc=$noNc                                      \
#   --without-nc=N                                          \
#   --with-nc=N                                             \
#   --with-nc=3                                             \
