function latint_cmp(a, b)
   if false then
      local x, y, z
      for x = 0, L[0] - 1 do
         for y = 0, L[1] - 1 do
            for z = 0, L[2] - 1 do
               printf("[%3d %3d %3d]  %5d %5d\n", x, y, z, a[{x,y,z}], b[{x,y,z}])
            end
         end
      end
   end
   local d = a - b
   local c = (d*d):sum()/(a*a):sum()
   if c == 0 then
      return "eq"
   end
   return string.format("difference %.1e", c)
end

function latx_cmp(a, b)
