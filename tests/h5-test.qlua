            for z = 0, L[2] - 1 do
               printf("[%3d %3d %3d]  %s %s\n", x, y, z, tostring(a[{x,y,z}]), tostring(b[{x,y,z}]))
            end
         end
      end
   end
   local d = a - b
   local c = qcd.dot(d,d):sum():real()/qcd.dot(a,a):sum():real()
   if c == 0 then
      return "eq"
   end
   return string.format("difference %.1e", c)
end

function latc_cmp(a, b)
